{
  "name": "budget-tracker-pro",
  "version": "2.0.0",
  "description": "Smart expense tracking app with offline support",
  "main": "index.html",
  "scripts": {
    "build": "npm run copy-files",
    "copy-files": "mkdir -p dist && cp index.html dist/ && cp manifest.json dist/ && cp sw.js dist/ && cp -r icons dist/",
    "dev": "npx http-server . -p 8080",
    "android:build": "npx cap build android",
    "android:run": "npx cap run android",
    "android:open": "npx cap open android",
    "ios:build": "npx cap build ios",
    "ios:run": "npx cap run ios",
    "ios:open": "npx cap open ios",
    "sync": "npx cap sync",
    "add:android": "npx cap add android",
    "add:ios": "npx cap add ios"
  },
  "keywords": [
    "budget",
    "expense-tracker",
    "finance",
    "mobile-app",
    "pwa"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@capacitor/cli": "^5.0.0",
    "http-server": "^14.1.1"
  },
  "dependencies": {
    "@capacitor/android": "^5.0.0",
    "@capacitor/app": "^5.0.0",
    "@capacitor/core": "^5.0.0",
    "@capacitor/haptics": "^5.0.0",
    "@capacitor/ios": "^5.0.0",
    "@capacitor/keyboard": "^5.0.0",
    "@capacitor/local-notifications": "^5.0.0",
    "@capacitor/network": "^5.0.0",
    "@capacitor/push-notifications": "^5.0.0",
    "@capacitor/splash-screen": "^5.0.0",
    "@capacitor/status-bar": "^5.0.0"
  }
}